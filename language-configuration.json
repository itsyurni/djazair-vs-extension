{
  "comments": {
    "lineComment": "#",
    "blockComment": ["#*", "*#"]
  },

  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],

  "autoClosingPairs": [
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string"] },
    { "open": "{", "close": "}" },
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "\"\"\"", "close": "\"\"\"" },
    { "open": "#*", "close": "*#" }
  ],

  "surroundingPairs": [
    ["\"", "\""],
    ["'", "'"],
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"\"\"", "\"\"\""],
    ["#*", "*#"]
  ],

  "folding": {
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  },

  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",

  "indentationRules": {
    "increaseIndentPattern": "^\\s*(if|elif|else|for|while|do|fn|class|enum|match|case|default|try|catch|finally).*:$",
    "decreaseIndentPattern": "^\\s*(end)\\b.*$"
  },

  "onEnterRules": [
    {
      "beforeText": "^\\s*(if|elif|else|for|while|do|fn|class|enum|match|case|default|try|catch|finally).*:$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*end\\s*$",
      "action": { "indent": "outdent" }
    }
  ]
}